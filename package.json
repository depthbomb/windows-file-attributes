{
	"name": "windows-file-attributes",
	"version": "0.1.0",
	"author": {
		"name": "depthbomb",
		"url": "https://github.com/depthbomb"
	},
	"description": "A pure TypeScript library for setting and reading file attributes on Windows",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		"types": {
			"import": "./dist/index.d.mts",
			"require": "./dist/index.d.ts"
		},
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/depthbomb/windows-file-attributes.git"
	},
	"bugs": {
		"url": "https://github.com/depthbomb/windows-file-attributes/issues"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"release": "yarn build && release-it"
	},
	"devDependencies": {
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.14.1",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"eslint": "^9.24.0",
		"release-it": "^18.1.2",
		"terser": "^5.39.0",
		"tslib": "^2.8.1",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	},
	"packageManager": "yarn@4.9.1"
}
